<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ktdsuniversity.edu.pms.login.dao.CommuteDao">

	<select id="getAllCommuteData"
			parameterType="com.ktdsuniversity.edu.pms.login.vo.CommuteVO"
			resultType="com.ktdsuniversity.edu.pms.login.vo.CommuteVO">
			SELECT CMMT_ID
			     , CMMT_DATE
			     , CMMT_TIME
			     , FNSH_TIME
			     , EMP_ID
			     , DEL_YN
			  FROM COMMUTE
			 ORDER BY CMMT_DATE DESC
	</select>


	<select id="getAllCommuteDataByEmpId"
			parameterType="com.ktdsuniversity.edu.pms.login.vo.CommuteVO"
			resultType="com.ktdsuniversity.edu.pms.login.vo.CommuteVO">
			SELECT CMMT_ID
			     , CMMT_DATE
			     , CMMT_TIME
			     , FNSH_TIME
			     , EMP_ID
			     , DEL_YN
			  FROM COMMUTE 
			 WHERE EMP_ID = '0509013'
			 ORDER BY CMMT_DATE DESC 
	</select>



</mapper>